<h2>Lista de postagem:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>


{{#each postagem}}
<div class="card mt-4">
<div class="card-body">
<h2 class="">{{titulo}}</h2>
<h4 class="">{{descricao}}</h4>
<div class="card mt-4">
<div class="card-body">
    <h4>{{conteudo}}</h4>
</div>
</div>
<small>Slug:{{slug}}</small> <br>
<small>Data de Criação: {{data}}</small><br>
<small>Categorias: {{categoria.nome}}</small><br>
<a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Postagem</button></a>
<form action="/admin/postagens/deletar" method="post">
<input type="hidden" name="id" value="{{_id}}">
<button type="submit" class="btn btn-danger mt-2">Deletar Postagem</button>
</form>
</div>
 </div>
{{else}}
<h4 class="mt-3">Nenhuma Postagem Resgistrada</h4>
{{/each}}
    