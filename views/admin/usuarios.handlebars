{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h2>Lista de Usuario:</h2>
<hr>
<a href="/admin/usuario/add"><button class="btn btn-success">Nova Usuario</button></a>

<div class="card mt-4">
<div class="card-body">
                     <div class="table-responsive">
                             <table class="table table-bordered no-wrap">
                                        <thead>
                                            <tr>
                                                <th>Nome</th>
                                                <th>Email</th>
                                                <th class="text-nowrap">Acção</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                            {{#each usuario}}
                                            <tr>
                                                <td>{{nome}}</td>
                                                <td>{{email}}</td>
                                                <td class="text-nowrap">
                                                    <form action="/admin//usuarios/deletar" method="post">
                                                       <input type="hidden" name="id" value="{{_id}}">
                                                         <button type="submit" class="btn btn-danger mt-2">Apagar</button>
                                                    </form>
                                    
                                                    
                                                </td>
                                            </tr>
                                            {{else}}
                                         <h4 class="mt-3">Nenhum Usuario Resgistrado</h4>
                                             {{/each}}
                                        </tbody>
                                    </table>
    

</div>
</div>
