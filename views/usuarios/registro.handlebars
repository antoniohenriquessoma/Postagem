<h4>Registra-se:</h4>
{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/usuario/registro" method="post">
      <label for="nome">Nome:</label>
      <input name="nome" id="nome" class="form-control" type="text" value="" required>
          <label for="email">Email:</label>
      <input name="email" id="email" class="form-control" type="email"  required>
          <label for="senha">Senha:</label>
      <input name="senha" id="senha" class="form-control" type="password" value="" required>
       <label for="senha2">Repita sua Senha:</label>
      <input name="senha2" id="senha2" class="form-control" type="password" value="" required> <br>
  
      <button class="btn btn-success">Cadastrar</button>
        </form>
    </div>
</div>