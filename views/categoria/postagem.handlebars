<h2>{{categoria.nome}}</h2>
{{#each postagens}}
<div class="card mt-4">
<div class="card-body">
<h2 class="">{{titulo}}</h2>
<h4 class="">{{descricao}}</h4>
<div class="card mt-4">
<div class="card-body">
    <h4>{{conteudo}}</h4>
   <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia Mais</button></a>
</div>
</div>
<small>Slug:{{slug}}</small> <br>
